---
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import MainLayout from "../layouts/MainLayout.astro";
import "..//styles/style.css";
---

<MainLayout
  title="3. SEM - Eksamensprojekt"
  splash_title="ADOPTER DIN NYE BEDSTE VEN"
  splash_description="Læs om alle de dejlige hunde, katte, kaniner og smådyr her på siden og find netop det dyr der passer perfekt til dit hjem."
  imgPath="/splash/splash-adopter.webp"
  intro_title="Se vores søde dyr, der søger et nyt hjem"
  intro_description="Skab en forskel i et kæledyrs liv, og adopter en af vores søde og kærlige dyr. Fra legesyge hunde til kælne katte - vores adoptable dyr venter på at finde deres nye familie."
>
  <!-- Indsæt indhold her -->

  <section>
    <!-- Indhold -->
    <main
      class=""
      id="step"
      x-data="{ dyr: 'alledyr', lokation: 'allelokationer', alder: 'allealder', kon: 'allekon', skjulteforestillinger : 0 }"
    >
      <!-- Filterknapper -->
      <section class="px-8 md:px-12">
        <div class="mb-10 mx-10">
          <form id="filtre" class="flex gap-5 justify-center">
            <!-- Dyr -->
            <div class="grid gap-2">
              <label for="dyr">Dyr</label>
              <select
                class="border rounded-lg border-primary_black block px-3 py-1 bg-primary_white"
                name="dyr"
                id="dyr"
                x-model="dyr"
                form="filtre"
                x-on:change="$nextTick(() => { ingenforestillinger() });"
              >
                <option value="alledyr">Alle dyr</option>
                <option value="hund">Hund</option>
                <option value="kat">Kat</option>
                <option value="kanin">Kanin</option>
                <option value="marsvin">Marsvin</option>
                <option value="orkenrotte">Ørkenrotte</option>
              </select>
            </div>

            <!-- Lokation -->
            <div class="grid gap-2">
              <label for="lokation">Lokation</label>
              <select
                class="border rounded-lg border-primary_black block px-3 py-1 bg-primary_white"
                name="lokation"
                id="lokation"
                x-model="lokation"
                form="filtre"
                x-on:change="$nextTick(() => { ingenforestillinger() });"
              >
                <option value="allelokationer">Alle lokationer</option>
                <option value="sjaelland">Sjælland</option>
                <option value="jylland">Jylland</option>
              </select>
            </div>

            <!-- Køn -->
            <div class="grid gap-2">
              <label for="kon">Køn</label>
              <select
                class="border rounded-lg border-primary_black block px-3 py-1 bg-primary_white"
                name="kon"
                id="kon"
                x-model="kon"
                form="filtre"
                x-on:change="$nextTick(() => { ingenforestillinger() });"
              >
                <option value="allekon">Alle køn</option>
                <option value="han">Han</option>
                <option value="hun">Hun</option>
              </select>
            </div>
          </form>
        </div>
      </section>

      <!---------------- Forestillinger ------------------>
      <div class="grid md:grid-cols-3 gap-10 lg:max-w-6xl mx-auto">
        <section
          class="cursor-pointer"
          :class="{'hidden': !(['alledyr', 'hund'].includes(dyr) && ['allelokationer', 'sjaelland'].includes(lokation) && ['allekon', 'han'].includes(kon)) }"
          x-transition:enter.duration.800ms
          x-on:change="testfunction();"
        >
          <Card
            title="Schæfer / Husky / Border / Berner"
            description=" I Basses tidligere familie var der små børn, der desværre var bange for denne smukke skabning, og man måtte indse, at samlivet ikke kunne fungere optimalt for alle parter."
            imgPath="/adoption/basse.webp"
            kategori="BASSE"
            link_side="singleview.html"
          />
        </section>

        <section
          class="cursor-pointer"
          :class="{'hidden': !(['alledyr', 'hund'].includes(dyr) && ['allelokationer', 'jylland'].includes(lokation) && ['allekon', 'han'].includes(kon)) }"
          x-transition:enter.duration.800ms
          x-on:change="testfunction();"
        >
          <Card
            title="Lhasa Apso / Cavalier King Charles"
            description=" Vores lille mini-Chewbacca her skal lige se nye folk an, før han overgiver sig helt, så ny familie må ikke forvente instant connection"
            imgPath="/adoption/karlo.webp"
