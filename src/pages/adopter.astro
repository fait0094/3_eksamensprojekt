---
import Button from "../components/Button.astro";
import Card from "../components/Card.astro";
import CardSektion from "../components/CardSektion.astro";
import MainLayout from "../layouts/MainLayout.astro";
import Splash from "../components/Splash.astro";
import Intro from "../components/Intro.astro";
import Faktaboks from "../components/Faktaboks.astro";
import "..//styles/style.css";
---

<MainLayout title="3. SEM - Eksamensprojekt" splash_title="ADOPTER DIN NYE BEDSTE VEN" splash_description="Læs om alle de dejlige hunde, katte, kaniner og smådyr her på siden og find netop det dyr der passer perfekt til dit hjem." imgPath="/splash/adoptersplash.png" intro_title="Se vores søde dyr, der søger et nyt hjem" intro_description="Skab en forskel i et kæledyrs liv, og adopter en af vores søde og kærlige dyr. Fra legesyge hunde til kælne katte - vores adoptable dyr venter på at finde deres nye familie.">
  <section class="max-w-sm md:max-w-3xl lg:max-w-6xl mx-auto">
    <article class="grid grid-cols-3 gap-4 md:max-w-3xl max-w-sm lg:max-w-6xl mx-auto pb-24">
      <div class="flex flex-col items-center justify-start">
        <img src="../splash/1.png" alt="Hund" class="w-28 pb-10" />
        <div class="text-center md:w-52">
          <h5 class="text-sm pb-2">UNDERSØG INDLEVERING</h5>
          <p class="text-xs">Undersøg kriterier for indlevering samt hvilke dyr vi modtager.</p>
        </div>
      </div>
      <div class="flex flex-col items-center justify-start">
        <img src="../splash/2.png" alt="Hund" class="w-32 pb-10" />
        <div class="text-center md:w-52">
          <h5 class="text-sm pb-2">KONTAKT OS</h5>
          <p class="text-xs">Ring til os på hverdage mellem 9.30 - 12.00 på telefon+45 44 94 66 95</p>
        </div>
      </div>
      <div class="flex flex-col items-center justify-start">
        <img src="../splash/3.png" alt="Hund" class="w-28 pb-10" />
        <div class="text-center md:w-52">
          <h5 class="text-sm pb-2">AFTALE</h5>
          <p class="text-xs">Hvis vi vurderer, at dyret er omplaceringsegnet, aftales den videre proces.</p>
        </div>
      </div>
    </article>
  </section>

  <section>
    <article>
      <div class="">
        <h1>HUNDE</h1>
        <h5 class="text-end">SE MERE</h5>
      </div>
      <div class="hunde grid grid-cols-2 md:grid-cols-3">
        <div class="lg:flex gap-8">
          <Card title="Schæfer / Husky / Border / Berner" description=" I Basses tidligere familie var der små børn, der desværre var bange for denne smukke skabning, og man måtte indse, at samlivet ikke kunne fungere optimalt for alle parter." imgPath="/public/adoption/basse.webp" kategori="BASSE" />
          <Card title="Lhasa Apso / Cavalier King Charles" description=" Vores lille mini-Chewbacca her skal lige se nye folk an, før han overgiver sig helt, så ny familie må ikke forvente instant connection" imgPath="/public/adoption/karlo.webp" kategori="KARLO" />
          <Card title="Labrador-blanding" description=" Zico er en flot fyr på kun 7 måneder, der er overdraget til Dyreværnet, da Zico og tidligere ejer var landet i en dårlig spiral, der påvirkede begge parter negativt, så noget måtte gøres." imgPath="/public/adoption/zico.png" kategori="ZICO" />
        </div>
      </div>
    </article>

    <article>
      <h1>KATTE</h1>
      <h5 class="text-end">SE MERE</h5>
      <div class="hunde grid grid-cols-2 md:grid-cols-3">
        <div class="lg:flex gap-8">
          <Card title="Schæfer / Husky / Border / Berner" description=" I Basses tidligere familie var der små børn, der desværre var bange for denne smukke skabning, og man måtte indse, at samlivet ikke kunne fungere optimalt for alle parter." imgPath="/public/adoption/basse.webp" kategori="BASSE" />
          <Card title="Lhasa Apso / Cavalier King Charles" description=" Vores lille mini-Chewbacca her skal lige se nye folk an, før han overgiver sig helt, så ny familie må ikke forvente instant connection" imgPath="/public/adoption/karlo.webp" kategori="KARLO" />
          <Card title="Labrador-blanding" description=" Zico er en flot fyr på kun 7 måneder, der er overdraget til Dyreværnet, da Zico og tidligere ejer var landet i en dårlig spiral, der påvirkede begge parter negativt, så noget måtte gøres." imgPath="/public/adoption/zico.png" kategori="ZICO" />
        </div>
      </div>
    </article>
  </section>
</MainLayout>
