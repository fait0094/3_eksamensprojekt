---
import "../styles/style.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";

const {
  title,
  splash_title,
  splash_description,
  imgPath,
  intro_title,
  intro_description,
  metacontent,
} = Astro.props;
---

<html lang="da">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/logo.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="robots" content="noindex" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={metacontent} />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <!-- <script src="https://cdn.jsdelivr.net/npm/alpinejs@2"></script> -->
    <link
      href="https://fonts.googleapis.com/css2?family=Barlow:wght@700;800&family=Poppins&display=swap"
      rel="stylesheet"
    />
    <title>{title}</title>
  </head>
  <body>
    <Header />

    <!-- Splash -->
    <section
      class="h-60 text-primary_white flex items-center"
      style={`background-image: url(${imgPath}); background-repeat: no-repeat; background-size: cover;`}
    >
      <div class="m-10 lg:ml-36">
        <h1 class="">{splash_title}</h1>
        <p class="">{splash_description}</p>
      </div>
    </section>

    <!-- Intro -->
    <section class="flex flex-col items-center text-center m-10">
      <h2>{intro_title}</h2>
      <p>{intro_description}</p>
    </section>

    <main class="md:p-0 lg:p-0 mb-12">
      <slot />
    </main>
    <Footer />
    <script is:inline>
      ingendyr();
      function ingendyr() {
        const skjultedyr = document.querySelectorAll(".hidden").length;
        if (skjultedyr === 15) {
          document.querySelector("#ingendyr").classList.remove("hidden");
        } else {
          document.querySelector("#ingendyr").classList.add("hidden");
        }
      }
    </script>
  </body>
</html>
