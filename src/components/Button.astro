---
import "../styles/style.css";
const { variant, size, link_side, hover, ...rest } = Astro.props;
---

<a
  href={link_side}
  data-variant={variant}
  data-size={size}
  data-hover={hover}
  class="rounded-xl text-primary_white inline-block hover:scale-105 transition-transform duration-200"
  {...rest}
>
  <slot /></a
>

<style>
  /* Variants */
  [data-variant="primary_green"] {
    background: var(--cta_green);
  }

  [data-variant="primary_blue"] {
    background: var(--cta_blue);
  }

  [data-variant="secondary"] {
    background-color: var(--cta_black);
  }

  /* Sizes */
  [data-size="medium"] {
    padding-block: var(--spacing-xs);
    width: 100%;
    display: grid;
    justify-content: center;
  }

  [data-size="small"] {
    padding-block: var(--spacing-xs);
    padding-inline: var(--spacing-md);
  }

  [data-size="mini"] {
    padding-block: var(--spacing-xxs);
    padding-inline: var(--spacing-sm);
  }
</style>
